{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-payment" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary">
                    <i class="fa fa-save"></i>
                </button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default">
                    <i class="fa fa-reply"></i>
                </a>
            </div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li>
                        <a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger alert-dismissible">
                <i class="fa fa-exclamation-circle"></i>
                {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <i class="fa fa-pencil"></i>
                    {{ text_edit }}</h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-payment" class="form-horizontal">
                    <div class="tab-content">
                        <div class="form-group required">
                            <label class="col-sm-2 control-label" for="input-token">{{ entry_token }}</label>
                            <div class="col-sm-10">
                                <input type="text" name="payment_yedpay_token" value="{{ payment_yedpay_token }}" placeholder="{{ entry_token }}" id="input-token" class="form-control"/>
                                {% if error_token %}
                                    <div class="text-danger">{{ error_token }}</div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-2 control-label" for="input-sign-key">{{ entry_sign_key }}</label>
                            <div class="col-sm-10">
                                <input type="text" name="payment_yedpay_sign_key" value="{{ payment_yedpay_sign_key }}" placeholder="{{ entry_sign_key }}" id="input-sign-ley" class="form-control"/>
                                {% if error_sign_key %}
                                    <div class="text-danger">{{ error_sign_key }}</div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-test">
                                <span data-toggle="tooltip" title="{{ help_test }}">{{ entry_test }}</span></label>
                            <div class="col-sm-10">
                                <select name="payment_yedpay_test" id="input-test" class="form-control">
                                    {% if payment_yedpay_test == 'sandbox' %}
                                        <option value="sandbox" selected="selected">{{ text_sandbox }}</option>
                                    {% else %}
                                        <option value="sandbox">{{ text_sandbox }}</option>
                                    {% endif %}
                                    {% if payment_yedpay_test == 'live' %}
                                        <option value="live" selected="selected">{{ text_live }}</option>
                                    {% else %}
                                        <option value="live">{{ text_live }}</option>
                                    {% endif %}
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-support-gateway">
                                <span data-toggle="tooltip" title="{{ help_support_gateway }}">{{ entry_support_gateway }}</label>
                            <div class="col-sm-10">
                                <select name="payment_yedpay_support_gateway" id="input-support-gateway" class="form-control">
                                    {% if payment_yedpay_support_gateway == '0' %}
                                        <option value="0" selected="selected">{{ text_all }}</option>
                                    {% else %}
                                        <option value="0">{{ text_all }}</option>
                                    {% endif %}
                                    {% if payment_yedpay_support_gateway == '4_2' %}
                                        <option value="4_2" selected="selected">{{ text_gateway_alipay_online }}</option>
                                    {% else %}
                                        <option value="4_2">{{ text_gateway_alipay_online }}</option>
                                    {% endif %}
                                    {% if payment_yedpay_support_gateway == '8_2' %}
                                        <option value="8_2" selected="selected">{{ text_gateway_wechatpay_online }}</option>
                                    {% else %}
                                        <option value="8_2">{{ text_gateway_wechatpay_online }}</option>
                                    {% endif %}
                                    {% if payment_yedpay_support_gateway == '9_1' %}
                                        <option value="9_1" selected="selected">{{ text_gateway_unionpay_express_pay }}</option>
                                    {% else %}
                                        <option value="9_1">{{ text_gateway_unionpay_express_pay }}</option>
                                    {% endif %}
                                    {% if payment_yedpay_support_gateway == '9_5' %}
                                        <option value="9_5" selected="selected">{{ text_gateway_unionpay_upop }}</option>
                                    {% else %}
                                        <option value="9_5">{{ text_gateway_unionpay_upop }}</option>
                                    {% endif %}
                                    {% if payment_yedpay_support_gateway == '12_1' %}
                                        <option value="12_1" selected="selected">{{ text_gateway_credit_card_online }}</option>
                                    {% else %}
                                        <option value="12_1">{{ text_gateway_credit_card_online }}</option>
                                    {% endif %}
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-support-wallet">
                                <span data-toggle="tooltip" title="{{ help_support_wallet }}">{{ entry_support_wallet }}</label>
                            <div class="col-sm-10">
                                <select name="payment_yedpay_support_wallet" id="input-support-wallet" class="form-control">
                                    {% if payment_yedpay_support_wallet == '0' %}
                                        <option value="0" selected="selected">{{ text_all }}</option>
                                    {% else %}
                                        <option value="0">{{ text_all }}</option>
                                    {% endif %}
                                    {% if payment_yedpay_support_wallet == 'HK' %}
                                        <option value="HK" selected="selected">{{ text_wallet_hk }}</option>
                                    {% else %}
                                        <option value="HK">{{ text_wallet_hk }}</option>
                                    {% endif %}
                                    {% if payment_yedpay_support_wallet == 'CN' %}
                                        <option value="CN" selected="selected">{{ text_wallet_cn }}</option>
                                    {% else %}
                                        <option value="CN">{{ text_wallet_cn }}</option>
                                    {% endif %}
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-expiry-time">
                                <span data-toggle="tooltip" title="{{ help_expiry_time }}">{{ entry_expiry_time }}</label>
                            <div class="col-sm-10">
                                {% if payment_yedpay_expiry_time %}
                                    <input type="text" name="payment_yedpay_expiry_time" value="{{ payment_yedpay_expiry_time }}" placeholder="{{ entry_expiry_time }}" id="input-expiry-time" class="form-control"/>
                                {% else %}
                                    <input type="text" name="payment_yedpay_expiry_time" value="10800" placeholder="{{ entry_expiry_time }}" id="input-expiry-time" class="form-control"/>
                                {% endif %}
                                {% if error_expiry_time %}
                                    <div class="text-danger">{{ error_expiry_time }}</div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-custom-id-prefix">
                                <span data-toggle="tooltip" title="{{ help_custom_id_prefix }}">{{ entry_custom_id_prefix }}</span></label>
                            <div class="col-sm-10">
                                <input type="text" name="payment_yedpay_custom_id_prefix" value="{{ payment_yedpay_custom_id_prefix }}" placeholder="{{ entry_custom_id_prefix }}" id="input-custom-id-prefix" class="form-control"/>
                                {% if error_custom_id_prefix %}
                                    <div class="text-danger">{{ error_custom_id_prefix }}</div>
                                {% endif %}
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-total">
                                <span data-toggle="tooltip" title="{{ help_total }}">{{ entry_total }}</span></label>
                            <div class="col-sm-10">
                                <input type="text" name="payment_yedpay_total" value="{{ payment_yedpay_total }}" placeholder="{{ entry_total }}" id="input-total" class="form-control"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-order-status">{{ entry_order_status }}</label>
                            <div class="col-sm-10">
                                <select name="payment_yedpay_order_status_id" id="input-order-status" class="form-control">
                                    {% for order_status in order_statuses %}
                                        {% if order_status.order_status_id == payment_yedpay_order_status_id %}
                                            <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                                        {% else %}
                                            <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                                        {% endif %}
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-geo-zone">{{ entry_geo_zone }}</label>
                            <div class="col-sm-10">
                                <select name="payment_yedpay_geo_zone_id" id="input-geo-zone" class="form-control">
                                    <option value="0">{{ text_all_zones }}</option>
                                    {% for geo_zone in geo_zones %}
                                        {% if geo_zone.geo_zone_id == payment_yedpay_geo_zone_id %}
                                            <option value="{{ geo_zone.geo_zone_id }}" selected="selected">{{ geo_zone.name }}</option>
                                        {% else %}
                                            <option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
                                        {% endif %}
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                            <div class="col-sm-10">
                                <select name="payment_yedpay_status" id="input-status" class="form-control">
                                    {% if payment_yedpay_status %}
                                        <option value="1" selected="selected">{{ text_enabled }}</option>
                                        <option value="0">{{ text_disabled }}</option>
                                    {% else %}
                                        <option value="1">{{ text_enabled }}</option>
                                        <option value="0" selected="selected">{{ text_disabled }}</option>
                                    {% endif %}
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
                            <div class="col-sm-10">
                                <input type="text" name="payment_yedpay_sort_order" value="{{ payment_yedpay_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control"/>
                            </div>
                        </div>
                    </div>
                </form>
                <div class="alert alert-info">{{ help_yedpay_setup }}</div>
                <div class="pull-right">(Version 1.1.1)</div>
            </div>
        </div>
    </div>
</div>
{{ footer }}