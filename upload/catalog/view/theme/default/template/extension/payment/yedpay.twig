<form id="yedpaysubmit" name="yedpaysubmit" action="{{ action }}" method="get">
    {% for key, value in form_params %}
        <input type="hidden" name="{{ key }}" value="{{ value }}"/>
    {% endfor %}
</form>
<div>You will be redirected to the Yedpay website to complete payment after you confirm your order.</div>
<div class="buttons">
    <div class="pull-right">
        <input type="button" value="{{ button_confirm }}" id="button-confirm" class="btn btn-primary" />
    </div>
</div>
<script type="text/javascript"><!--
    $('#button-confirm').bind('click', function() {
        $('#yedpaysubmit').submit();
    });
//--></script>
